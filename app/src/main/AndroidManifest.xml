<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tsukune.datasecure">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.fingerprint"
        android:required="false" />

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login_Authentication.Login_Options"
            android:label="@string/title_activity_login_options"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".Register_User_Logic.Register_User"
            android:label="register_user">
        </activity>
        <activity
            android:name=".Menu"
            android:label="Menu">
        </activity>
        <activity
            android:name=".PS_Menu.Password_Storage_Menu"
            android:label="ps_menu">
        </activity>
        <activity
            android:name=".EditUser.Settings"
            android:label="settings">
        </activity>
        <activity android:name=".PS_Menu.Edit_PS_Menu" />
        <activity android:name=".FS_Menu.File_Storage_Menu"
            android:label="fs_menu">
        </activity>
        <activity android:name=".FS_Menu.Edit_File_Menu"></activity>
    </application>

</manifest>